# Server Configuration
PORT=8000                  # The port your server runs on locally or in dev
NODE_ENV=production        # "production" for live, "development" for dev
APP_URL=https://yourfrontend.com  # Frontend URL used for password reset links

# MongoDB
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority # MongoDB connection string

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret  # Secret key for signing JWT tokens
JWT_EXPIRES_IN=7d                         # JWT token expiration time (7 days)

# SMTP / Email
SMTP_HOST=smtp.your-email-provider.com    # Email server host
SMTP_PORT=587                             # Email server port
SMTP_USER=your-email@example.com          # Email account used to send emails
SMTP_PASS=your-email-password             # Password for the email account

# Cookie Configuration
COOKIE_SECURE=true                        # true in production (HTTPS), false in local dev
                                           # Controls if cookies are secure (HTTPS only)

# Rate Limiting
LOGIN_MAX_ATTEMPTS=5                       # Max login attempts per IP per window
SIGNUP_MAX_ATTEMPTS=10                     # Max signup attempts per IP per window
FORGOT_PASSWORD_MAX_ATTEMPTS=5             # Max forgot-password attempts per IP per window

# Frontend URL
FRONTEND_URL=https://yourfrontend.com      # For CORS and redirect links after signup/reset
